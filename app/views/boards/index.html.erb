<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ms-auto boards__linkBox">
    <%= link_to '新規作成', new_board_path, class: 'btn btn-outline-dark'%>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.title %></td>
      <td><%= board.author_name %></td>
      <td><%= board.created_at.strftime('%Y年 %m月 %d日 ') %></td>
      <td><%= board.updated_at.strftime('%Y年 %m月 %d日 ') %></td>
      <td><%= link_to '詳細', board,data:  { turbo_confirm: '削除しますか？' },  class: 'btn btn-outline-dark' %></td>
      <td><%= link_to '削除', board_path(board), data: { turbo_method: :delete, turbo_confirm: '削除しますか？' }, class: 'btn btn-outline-dark' %></td>
    </tr>
  <%end%>
  </tbody>
</table>