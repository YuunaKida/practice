<div class="p-comment__item">
  <p><%= simple_format(comment.comment) %></p>
  <div class="p-comment__bottomLine">
    <span><%= comment.name %></span>
    <span><%= comment.created_at.strftime('%Y年 %m月 %d日 ') %></span>
    <span><%= link_to '削除', board_comment_path(comment.board, comment), data: { turbo_method: :delete, turbo_confirm: '削除しますか？' }, class: 'btn btn-outline-dark' %></span>
  </div>
</div>